<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp">
    <TextView
        android:id="@+id/select_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="从相册选择"
        android:textColor="#000"
        android:textSize="16sp"
        android:background="@drawable/bg_ffffff_10_dialog"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aeaeae"
        android:alpha="0.2"/>
    <TextView
        android:id="@+id/select_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="打开相机"
        android:textColor="#000"
        android:textSize="16sp"
        android:background="@drawable/bg_ffffff_10_dialog_2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/transparent" />

    <TextView
        android:id="@+id/select_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="取消"
        android:textSize="16sp"
        android:background="@drawable/bg_ffffff_10"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent" />
</LinearLayout>